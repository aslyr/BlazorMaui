@page "/"
@using BlazorShared.Models
@attribute [TabItemOption(Text = "首页", Icon = "fa fa-fa")]

<h1>Blazor Demo</h1>
<Title>BlazorMaui</Title>
<TimerAme />

<Tab>
    <TabItem Text="平台测试">
        <Button Text="定位权限" OnClick="检查定位权限" />
        <span>@定位权限</span><br /><br />
        <Button Text="摄像机权限" OnClick="检查摄像机权限" />
        <span>@摄像机权限</span><br /><br />
        <Button Text="定位" OnClick="获取定位" />
        <span>@Locations</span><br /><br />
        <Button Text="TakePhoto" OnClick="TakePhoto" />
        <span>@PhotoFilename</span><br /><br />
        <Button Text="Navigate To Madrid 马德里" OnClick="NavigateToMadrid" />
        <span>@导航消息</span><br /><br />
        <Button Text="Navigate To Plaza de España 西班牙广场" OnClick="NavigateToPlazaDeEspana" /><br /><br />
        <Button Text="NavigateTo Plaza de España 西班牙广场 ByPlacemark" OnClick="NavigateToPlazaDeEspanaByPlacemark" /><br /><br />
        <Button Text="导航到西班牙广场" OnClick="DriveToPlazaDeEspana" /><br /><br />
        <Button Text="截屏" OnClick="TakeScreenshotAsync" /><br /><br />
        <span>@截屏消息</span><br /><br />
    </TabItem> 
    <TabItem Text="@version">
        <Badge Color="Color.Primary">
            机器码 ID: @IPAddressManager.GetIdentifier();
        </Badge>
        <Badge Color="Color.Success">
            IP: @WebClientInfo.ClientIpAddress;
        </Badge>
        <Badge Color="Color.Warning">
            IP: @IPAddressManager.GetIPAddress();
        </Badge>
        @foreach (var item in IPAddressManager.GetIPAddresList())
        {
            <Badge Color="Color.Info">
                IPs: @item;
            </Badge>

        }
        <Button Text="粘贴" OnClick="粘贴" />
        <span>@文字</span>
    </TabItem>
    <TabItem Text="PC">
        <Table TItem="PcStatus"
               Items="@pcStatuss"
               AutoGenerateColumns="true" />
        <TableLazyHero @ref="list1"
                       TItem="PC"
                       ShowColumnList="true"
                       刷新="刷新数据"
                       TableSize="TableSize.Normal"
                       DoubleClickToEdit="false"
                       HeaderStyle=TableHeaderStyle.None
                       IsPagination="false"
                       ShowRefresh="false"
                       IsStriped="false"
                       RenderMode="TableRenderMode.Auto" />
    </TabItem>
    <TabItem Text="Items">
        <Table TItem="Item"
               Items="@records"
               AutoGenerateColumns="true" />
    </TabItem>
</Tab>